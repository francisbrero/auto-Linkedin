{
  "manifest_version": 3,
  "name": "LinkedIn Automation",
  "version": "1.1.3",
  "description": "Automates handling of LinkedIn connection requests.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icon.png"
    }
  }
}
